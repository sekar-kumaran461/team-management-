# =====================================
# RENDER ENVIRONMENT VARIABLES
# Copy these exact values to your Render dashboard
# =====================================

# =====================================
# CORE DJANGO SETTINGS
# =====================================
DEBUG=False
SECRET_KEY=django-insecure-your-super-secret-key-here-change-this-in-production
ALLOWED_HOSTS=your-app-name.onrender.com

# =====================================
# DATABASE CONFIGURATION
# =====================================
DATABASE_URL=postgresql://postgres.your-ref:your-password@aws-1-ap-southeast-1.pooler.supabase.com:6543/postgres

# =====================================
# SECURITY SETTINGS (AUTOMATIC)
# =====================================
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# =====================================
# GOOGLE INTEGRATION (OPTIONAL)
# Only add if you need Google Drive/Sheets integration
# =====================================
# GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
# GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret
# GOOGLE_DRIVE_SERVICE_ACCOUNT_KEY={"type": "service_account", "project_id": "your-project"}

# =====================================
# RENDER SPECIFIC
# =====================================
PORT=10000
PYTHON_VERSION=3.11.10

# =====================================
# FILE STORAGE (AUTOMATIC)
# =====================================
USE_S3=False
STATIC_ROOT=/opt/render/project/src/staticfiles
